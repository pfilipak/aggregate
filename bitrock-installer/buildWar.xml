<project>
    <shortName>ODKAggregate</shortName>
    <fullName>ODK Aggregate</fullName>
    <version>1.0</version>
    <licenseFile>files/LICENSE.txt</licenseFile>
    <leftImage>files/leftSide.png</leftImage>
    <logoImage>files/logo.png</logoImage>
    <splashImage>files/opendatakit.png</splashImage>
    <createUninstaller>0</createUninstaller>
    <defaultUnixOwner>${system_username}</defaultUnixOwner>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <height>500</height>
    <productUrlInfoAbout>http://www.opendatakit.org</productUrlInfoAbout>
    <requestedExecutionLevel>asInvoker</requestedExecutionLevel>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Open Data Kit</vendor>
    <width>700</width>
    <windowsExecutableIcon>files/opendatakit.ico</windowsExecutableIcon>
    <windowsUninstallerExecutableIcon>files/opendatakit.ico</windowsUninstallerExecutableIcon>
    <componentList>
        <include>
            <file>components/params.xml</file>
        </include>
        <include>
            <file>components/configure_war.xml</file>
        </include>
    </componentList>
    <customLanguageFileList>
        <language>
            <code>en</code>
            <file>tagfile-en.lng</file>
        </language>
    </customLanguageFileList>
    <finalPageActionList>
        <runProgram>
            <program>CScript.exe</program>
            <programArguments>/E:JScript ${installdir}${platform_path_separator}launchReadme.js</programArguments>
            <progressText>Show additional configuration steps</progressText>
            <useMSDOSPath>0</useMSDOSPath>
            <workingDirectory>${installdir}</workingDirectory>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <actionGroup>
            <progressText>Show additional configuration steps</progressText>
            <actionList>
                <urlEncode>
                    <text>${installdir.unix}/README.html</text>
                    <variable>readme_path</variable>
                </urlEncode>
                <launchBrowser>
                    <url>file:///${readme_path}</url>
                </launchBrowser>
            </actionList>
            <ruleList>
                <platformTest>
                    <negate>1</negate>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </actionGroup>
    </finalPageActionList>
</project>

