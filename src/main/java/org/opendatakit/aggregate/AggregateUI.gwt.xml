<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='aggregateui'>

  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <inherits name='com.google.gwt.user.theme.standard.StandardResources'/>
  <inherits name='com.google.gwt.maps.GoogleMaps' />
  
  <!-- Our access denied exception class -->
  <inherits name='org.opendatakit.common.security.Security'/>

  <!-- Persistence layer exception class -->
  <inherits name='org.opendatakit.common.persistence.Persistence'/>

  <set-property name="user.agent" value="gecko1_8" />
  <set-configuration-property name="UiBinder.useSafeHtmlTemplates" value="true" /> 
  
  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.opendatakit.aggregate.client.AggregateUI'/>
  <servlet path="/filterservice" class="org.opendatakit.aggregate.server.FilterServiceImpl"/>
  <servlet path="/formservice" class="org.opendatakit.aggregate.server.FormServiceImpl"/>
  <servlet path="/formadminservice" class="org.opendatakit.aggregate.server.FormAdminServiceImpl"/>
  <servlet path="/preferenceservice" class="org.opendatakit.aggregate.server.PreferenceServiceImpl"/>
  <servlet path="/servicesadminservice" class="org.opendatakit.aggregate.server.ServicesAdminServiceImpl"/>
  <servlet path="/submissionservice" class="org.opendatakit.aggregate.server.SubmissionServiceImpl"/>
   
  <source path='client'/>
  <source path='client/filter'/>
  <source path='client/form'/>  
  <source path='client/preferences'/>
  <source path='client/submission'/>
  <source path='client/visualization'/>
  <source path='constants/common'/>
</module>
