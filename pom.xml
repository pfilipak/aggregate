				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<!-- these are referenced by other projects -->
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<version>1.5</version>
					<executions>
						<execution>
							<id>add-java-source</id>
							<!-- used in aggregate-src -->
							<goals><goal>add-source</goal></goals>
							<configuration>
								<sources>
									<source>${toplevel.directory}/src/main/java</source>
								</sources>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>gwt-maven-plugin</artifactId>
					<version>2.2.0</version>
					<dependencies>
						<dependency>
							<groupId>com.google.gwt</groupId>
							<artifactId>gwt-user</artifactId>
							<version>${google.gwt.version}</version>
						</dependency>
						<dependency>
							<groupId>com.google.gwt</groupId>
							<artifactId>gwt-dev</artifactId>
							<version>${google.gwt.version}</version>
						</dependency>
						<dependency>
							<groupId>com.google.gwt</groupId>
							<artifactId>gwt-servlet</artifactId>
							<version>${google.gwt.version}</version>
						</dependency>
						<dependency> <!-- needed for gwt-user 2.3.0 action -->
							<groupId>javax.validation</groupId>
							<artifactId>validation-api</artifactId>
							<version>1.0.0.GA</version>
						</dependency>
					</dependencies>
					<executions>
						<execution>
							<id>gwt-javascript</id>
							<!-- used in aggregate-gae, aggregate-postgres, aggregate-mysql -->
							<configuration>
							  <extraJvmArgs>-Xmx512M -Xss1024k</extraJvmArgs>
							</configuration>
							<goals>
							  <goal>compile</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>1.6</version>
					<executions>
						<execution>
							<id>war-clean</id>
							<!-- used in aggregate-gae, aggregate-postgres, aggregate-mysql -->
							<configuration>
							  <target>
								<!-- deletes the /war tree -->
								<delete dir="${project.basedir}/src/main/webapp"/>
							  </target>
							</configuration>
							<goals>
							  <goal>run</goal>
							</goals>
						</execution>
						<execution>
							<id>war-prep</id>
							<!-- used in aggregate-gae, aggregate-postgres, aggregate-mysql -->
							<configuration>
							  <target>
								<!-- copies the /war tree from the eclipse gae project to src/main/webapp -->
								<delete dir="${project.basedir}/src/main/webapp"/>
								<copy todir="${project.basedir}/src/main/webapp">
									<fileset dir="${war.directory}">
										<exclude name="aggregateui" />
										<exclude name="WEB-INF/appengine-generated" />
										<exclude name="WEB-INF/classes" />
										<exclude name="WEB-INF/deploy" />
										<exclude name="WEB-INF/lib" />
									</fileset>
								</copy>
							  </target>
							</configuration>
							<goals>
							  <goal>run</goal>
							</goals>
						</execution>
						<execution>
							<id>war-remove-classes</id>
							<!-- used in aggregate-postgres, aggregate-mysql -->
							<configuration>
							  <target>
								<!-- deletes the /classes tree.
									We don't need another copy of gwt classes -->
								<delete dir="${project.basedir}/target/classes"/>
							  </target>
							</configuration>
							<goals>
							  <goal>run</goal>
							</goals>
						</execution>
						<execution>
							<id>war-remove-classes-except-stub</id>
							<!-- used in aggregate-gae -->
							<configuration>
							  <target>
								<!-- deletes the /classes tree. Leaves a placeholder class.
									We don't need another copy of gwt classes -->
								<delete includeemptydirs="true">
									<fileset dir="${project.basedir}/target/classes">
									</fileset>
								</delete>
							  </target>
							</configuration>
							<goals>
							  <goal>run</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
